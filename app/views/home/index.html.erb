<section id = 'warehouses'>

<h2>Galpões</h2>
<div>
  <p><%= link_to('Cadastrar Galpão', new_warehouse_path)%></p>
</div>
<% @warehouses.each do |w|%>
  <div id="galpao">
    <ul>
      <h3><%= link_to(w.name, warehouse_path(w.id)) %></h3>
      <dl>
        <dt>Código:</dt>
        <dd><%= w.code %></dd>
        <dt>Cidade:</dt>
        <dd><%= w.city %></dd>
        <dt>Área:</dt>
        <dd><%= w.area %> m2</dd>
        <dt>Descrição:</dt>
        <dd><%= w.description %></dd>
        <dt>Endereço:</dt>
        <dd><%= w.address%>
          <strong> CEP: </strong>
          <%= w.cep%></dd>
        <dt>Área:</dt>
        <dd><%= w.area %> m2</dd>
      </dl>
    </ul>
  </div>

  <br>

<% end %>

<% if @warehouses.empty? %>
  <p>Não existem galpões cadastrados.</p>
<% end %>



</section>